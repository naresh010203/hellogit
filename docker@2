---
pool:
  name: "Azure Pipelines"
  vmImage: 'ubuntu-latest'

trigger:
  - main

parameters:
  - name: version
    displayName: version
    type: string
    default: 1.0

steps:
  - task: Docker@2
    inputs:
      command: 'build'
      buildContext: .
      repository: 'StudentCourses'
      tags: '$(Build.BuildId)'